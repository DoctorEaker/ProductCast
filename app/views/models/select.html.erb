<h1>Seleccione los modelos a utilizar</h1>

<%= form_tag(models_params_path, method: "post") do %>
    <table>
        <tr>
            <th> Modelo </th>
            <th></th>
        </tr>
        
        <% @models.each do |model| %>
            <tr>
                <td><%= model.name %></td>
                <td><%= check_box_tag(model.class_name) %></td>
            </tr>
        <% end %>
    </table>
    
    <%= submit_tag("Seleccionar modelos") %>
<% end %>