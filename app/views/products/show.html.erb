<h1>
<%= @product.name %>
</h1>

<h2>Registros</h2>

<%= link_to "Realizar predicción", models_path %>

<br>
<table>
    <tr>
        <th>Fecha</th>
        <th>Ventas</th>
    </tr>

<% @product.records.sort_by(&:date).each do |record| %>
    <tr>
        <td><%= record.date %></td>
        <td><%= record.sales %></td>
    </tr>
<% end %>
</table>

