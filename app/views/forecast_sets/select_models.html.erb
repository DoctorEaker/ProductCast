<%= form_for @forecast_set, url: select_params_path do |f| %>
    <table>
      <tr>
          <th> Modelo </th>
          <th></th>
      </tr>
      <%= f.collection_check_boxes(:model_ids, Model.all, :id, :name) do |b|%>
        <tr>
            <td><%= b.text %></td>
            <td><%= b.label { b.check_box } %></td>
        </tr>
      <% end %>
    </table>
    <%= f.hidden_field :product_id, value: params[:id] %>
    <p>
    <%= submit_tag("Seleccionar modelos") %>
    </p>
<% end %>